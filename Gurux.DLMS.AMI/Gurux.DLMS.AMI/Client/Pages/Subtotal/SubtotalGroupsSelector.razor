@using Gurux.DLMS.AMI.Client.Helpers.Selection
@using Gurux.DLMS.AMI.Client.Pages.User;
@using Gurux.DLMS.AMI.Shared.DIs
@using Gurux.DLMS.AMI.Shared.DTOs.Subtotal
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Gurux.DLMS.AMI.Shared.DTOs
@using Gurux.DLMS.AMI.Shared.DTOs.Authentication
@using Gurux.DLMS.AMI.Shared.Rest
@using Microsoft.AspNetCore.SignalR.Client
@using Gurux.DLMS.AMI.Shared
@using Gurux.DLMS.AMI.Shared.Enums
@using Gurux.DLMS.AMI.Client.Helpers
@using Gurux.DLMS.AMI.Module
@using System.Linq

@inject HttpClient Http
@inject IGXNotifier Notifier

<SelectionContainer TItem="GXSubtotalGroup" @ref="@_selectionContainer">
    <SelectionList Title="Selected" @ref="_selected"
                   ShowAllUsers="false"
                   ItemsProvider="@GetSelectedItems">
        <DataContent>
            @context.Name
        </DataContent>
        <FilterContent>
            <Search Placeholder="@Properties.Resources.FilterByName"
                    OnClickAsync="@SearchSelectedByName" />
        </FilterContent>
    </SelectionList>
    <SelectionList Title="Available" @ref="_available"
                   ItemsProvider="@GetItems">
        <DataContent>
            @context.Name
        </DataContent>
        <FilterContent>
            <Search Placeholder="@Properties.Resources.FilterByName"
                    OnClickAsync="@SearchByName" />
            <Search Placeholder="@Properties.Resources.FilterByUser"
                    OnClickAsync="@SearchByUser" />
        </FilterContent>
    </SelectionList>
</SelectionContainer>

@code {
    [CascadingParameter]
    private UserGroupTab? UserGroupParent { get; set; }

    [CascadingParameter]
    private SubtotalTab? SubtotalParent { get; set; }

    SelectionList<GXSubtotalGroup>? _selected;
    SelectionList<GXSubtotalGroup>? _available;
    SelectionContainer<GXSubtotalGroup>? _selectionContainer;

    /// <summary>
    /// Subtotal group filter.
    /// </summary>
    private GXSubtotalGroup filter = new GXSubtotalGroup(null);

    protected async Task SearchSelectedByName(string? name)
    {
        try
        {
            if (_selected?.Items != null)
            {
                _selected.HiddenItems.Clear();
                if (!string.IsNullOrEmpty(name))
                {
                    name = name.ToLower();
                    foreach (var it in _selected.Items)
                    {
                        if (it.Name != null && !it.Name.ToLower().Contains(name))
                        {
                            _selected.HiddenItems.Add(it);
                        }
                    }
                }
                Notifier?.ClearStatus();
                await _selected.RefreshDataAsync();
            }
        }
        catch (Exception ex)
        {
            Notifier?.ProcessError(ex);
        }
    }

    protected async Task SearchByName(string? name)
    {
        try
        {
            if (_available != null)
            {
                filter.Name = name;
                Notifier?.ClearStatus();
                await _available.RefreshDataAsync();
            }
        }
        catch (Exception ex)
        {
            Notifier?.ProcessError(ex);
        }
    }

    protected async Task SearchByUser(string? userName)
    {
        try
        {
            if (_available != null)
            {
                if (string.IsNullOrEmpty(userName))
                {
                    filter.UserGroups = null;
                }
                else
                {
                    GXUser user;
                    GXUserGroup? ug = filter.UserGroups?.FirstOrDefault();
                    if (ug == null)
                    {
                        user = new GXUser();
                        ug = new GXUserGroup();
                        filter.UserGroups = new(new GXUserGroup[] { ug });
                        ug.Users = new(new GXUser[] { user });
                    }
                    else
                    {
                        user = filter.UserGroups[0].Users[0];
                    }
                    user.UserName = userName;
                }
                Notifier?.ClearStatus();
                await _available.RefreshDataAsync();
            }
        }
        catch (Exception ex)
        {
            Notifier?.ProcessError(ex);
        }
    }

    /// <summary>
    /// Filter is done when SearchSelectedByName is called.
    /// </summary>
    /// <param name="request"></param>
    /// <returns></returns>
    private ValueTask<ItemsProviderResult<GXSubtotalGroup>> GetSelectedItems(GXItemsProviderRequest request)
    {
        if (_selected?.Items == null)
        {
            return default;
        }
        //ToArray makes a clone from the items. Don't remove it.
        return new(new ItemsProviderResult<GXSubtotalGroup>(_selected.Items.ToArray(), _selected.Items.Count));
    }

    private async ValueTask<ItemsProviderResult<GXSubtotalGroup>> GetItems(GXItemsProviderRequest request)
    {
        //Don't clear status or error is lost.
        Notifier?.ProgressStart();
        try
        {
            ListSubtotalGroups req = new ListSubtotalGroups()
                {
                    Index = request.StartIndex,
                    Count = request.Count,
                    Filter = filter,
                    Descending = request.Descending,
                    AllUsers = request.ShowAllUserData,
                    Exclude = _selected?.Items?.Select(s => s.Id).ToArray()
                };
            var ret = await Http.PostAsJson<ListSubtotalGroupsResponse>("api/SubtotalGroup/List", req, request.CancellationToken);
            if (ret?.SubtotalGroups != null && _selected != null)
            {
                return new ItemsProviderResult<GXSubtotalGroup>(ret.SubtotalGroups, ret.Count);
            }
        }
        catch (TaskCanceledException)
        {
            //Let the table component handle this.
            throw;
        }
        catch (Exception ex)
        {
            Notifier?.ProcessError(ex);
        }
        finally
        {
            Notifier?.ProgressEnd();
        }
        return default;
    }

    protected override async Task OnInitializedAsync()
    {
        //Wait until table is loaded. Don't remove this or selector is null.
        await Task.Delay(1);
        try
        {
            if (_selectionContainer == null || _selected == null)
            {
                throw new ArgumentException(Properties.Resources.InvalidNotifier);
            }
            Notifier.ProgressStart();
            Notifier.ClearStatus();
            CrudAction action;
            if (UserGroupParent?.Active?.SubtotalGroups != null)
            {
                //Add selected subtotal groups.
                _selected.Items = UserGroupParent.Active.SubtotalGroups;
                action = ClientHelpers.GetAction(UserGroupParent.Action);
            }
            else if (SubtotalParent?.Active?.SubtotalGroups != null)
            {
                //Add selected subtotal groups.
                _selected.Items = SubtotalParent.Active.SubtotalGroups;
                action = ClientHelpers.GetAction(SubtotalParent.Action);
            }
            else
            {
                throw new ArgumentException(Properties.Resources.InvalidTarget);
            }
            bool addDefaultSubtotals = action == CrudAction.Create && !_selected.Items.Any();
            if (addDefaultSubtotals)
            {
                //Show default groups when new group is added.
                ListSubtotalGroups req = new ListSubtotalGroups()
                    {
                        Filter = new GXSubtotalGroup()
                        {
                            Default = true
                        },
                        Count = _selectionContainer.PageSize,
                        Exclude = _selected.Items.Select(s => s.Id).ToArray()
                    };
                var ret = await Http.PostAsJson<ListSubtotalGroupsResponse>("api/SubtotalGroup/List", req);
                if (ret?.SubtotalGroups != null)
                {
                    _selected.Items.AddRange(ret.SubtotalGroups);
                }
            }
            //Read available items.
            if (_available != null)
            {
                await _available.RefreshDataAsync();
            }
        }
        catch (Exception ex)
        {
            Notifier?.ProcessError(ex);
        }
        finally
        {
            Notifier?.ProgressEnd();
        }
    }
}

